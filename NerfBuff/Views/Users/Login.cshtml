@model NerfBuff.Models.Users

@{
    ViewData["Title"] = "Login Page";
}

<h2>Login Page</h2>

<div>
    <form asp-action="Login">
        <div class="form-horizontal">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BlogUserName" class="control-label"></label>
                <input asp-for="BlogUserName" class="form-control" />
                <span asp-validation-for="BlogUserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogUserPassword" class="control-label"></label>
                <input type="password" asp-for="BlogUserPassword" class="form-control" />
                <span asp-validation-for="BlogUserPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default" onclick="PostComment(blogUser)" />
            </div>
        </div>
    </form>
</div>